{
  "name": "Event Tracking with Google Universal Analytics",
  "version": "2.0.0",
  "description": "A sample extension which uses Google Universal Analytics to track usage.",
  "browser_action": {
    "default_title": "Open the popup",
    "default_icon": "analytics-extension-icon-19.png",
    "default_popup": "popup.html"
  },
  "icons": {
    "48": "analytics-extension-icon-48.png",
    "128": "analytics-extension-icon-128.png"
  },

  "manifest_version": 2,
  "content_security_policy": "script-src 'self' https://www.google-analytics.com; object-src 'self'"
}
